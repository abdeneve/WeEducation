<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/layout_item_msg_center"/>

    <RelativeLayout android:id="@+id/main_layout"
        android:gravity="right"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:minHeight="30.0dp"
        android:layout_marginTop="3dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/send_text_bg">

            <FrameLayout android:paddingRight="2.0dip"
                android:paddingBottom="2.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/tvEmojiconContent"
                    android:textSize="16sp"
                    android:textColor="#ff000000"
                    android:layout_gravity="left"
                    android:paddingLeft="8dip"
                    android:paddingTop="8dip"
                    android:paddingRight="8.0dip"
                    android:paddingBottom="3.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    />

                <LinearLayout
                    android:id="@+id/date_wrapper"
                    android:layout_gravity="bottom|center|right"
                    android:orientation="horizontal"
                    android:paddingLeft="6dp"
                    android:paddingRight="1.0dip"
                    android:paddingBottom="1.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvTime"
                        android:gravity="right"
                        android:layout_gravity="bottom|center|right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/ConversationDate"
                        android:text="8:20"/>

                    <ImageView
                        android:id="@+id/imgStatus"
                        android:layout_gravity="bottom|center|right"
                        android:paddingLeft="4dip"
                        android:paddingBottom="3dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </FrameLayout>
        </FrameLayout>


    </RelativeLayout>

</LinearLayout>


